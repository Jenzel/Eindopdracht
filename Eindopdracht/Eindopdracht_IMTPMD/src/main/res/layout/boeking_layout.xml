    <!--<ImageButton-->
        <!--android:id="@+id/bevestigbutton"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_above="@+id/annuleerbutton"-->
